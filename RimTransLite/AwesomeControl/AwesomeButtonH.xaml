<Button x:Class="RimTransLite.AwesomeControl.AwesomeButtonH"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RimTransLite.AwesomeControl"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" 
        Padding="6,3" Background="Transparent" BorderBrush="Transparent">

    <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Center" Orientation="Horizontal" >

        <fa:ImageAwesome Icon="{Binding Path=Icon}"
                         Foreground="{StaticResource LiteMainForeground}" Height="24" Width="24"
                         HorizontalAlignment="Left" VerticalAlignment="Center" />

        <Label Content="{Binding Path=Label}"
               Foreground="{StaticResource LiteMainForeground}" TextElement.FontSize="16px"
               VerticalAlignment="Bottom" HorizontalAlignment="Left" />

    </StackPanel>

</Button>
