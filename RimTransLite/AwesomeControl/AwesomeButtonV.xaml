<Button x:Class="RimTransLite.AwesomeControl.AwesomeButtonV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RimTransLite.AwesomeControl"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" 
        Height="54" MinWidth="54" Background="Transparent" BorderBrush="Transparent">
    
    <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center" >
        
        <fa:ImageAwesome Icon="{Binding Path=Icon}" Foreground="{StaticResource LiteMainForeground}"
                         Height="24" Width="24" Margin="0,10,0,1"/>
        
        <Label Content="{Binding Path=Label}" Foreground="{StaticResource LiteMainForeground}"
               TextElement.FontSize="12px" Height="25"
               VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        
    </StackPanel>
    
</Button>
