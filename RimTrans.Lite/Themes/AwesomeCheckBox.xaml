<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RimTrans.Lite.Themes"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:co="clr-namespace:RimTrans.Lite.Convertors">

    <co:IsCheckedToIcon x:Key="IsCheckedToIconConvertor"/>

    <!-- AwesomeCheckBox Single -->
    <Style TargetType="{x:Type CheckBox}" x:Key="Style.AwesomeCheckBox.Single">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid Background="{TemplateBinding Background}">
                        <fa:ImageAwesome Icon="{TemplateBinding IsChecked, Converter={StaticResource IsCheckedToIconConvertor}}"
                                         Foreground="{TemplateBinding Foreground}"
                                         Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <!-- Default Value -->
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Background" Value="Transparent"/>

    </Style>
    
</ResourceDictionary>