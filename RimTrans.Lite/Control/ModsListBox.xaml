<ListBox x:Class="RimTransLite.AwesomeControl.ModsListBox"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:RimTransLite.AwesomeControl"
         xmlns:fa="http://schemas.fontawesome.io/icons/"
         mc:Ignorable="d">
    <ListBox.ItemTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                <fa:ImageAwesome Icon="{Binding Path=Icon}"
                                 Foreground="{StaticResource LiteMainForeground}" Height="24" Width="24" 
                                 HorizontalAlignment="Left" VerticalAlignment="Center" />

                <Label Content="{Binding Path=ModName}"
                       Foreground="{StaticResource LiteMainForeground}" TextElement.FontSize="12px" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" />

                <Label Content="{Binding Path=ModNameNatural}"
                       Foreground="{StaticResource LiteSubForeground}" TextElement.FontSize="12px" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" />

            </StackPanel>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>
